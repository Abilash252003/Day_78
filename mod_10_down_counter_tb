///100 Days of RTL///

///Abilash P///

///Mod 10 down counter (Synchronous Reset)///

module counter_tb ();
  reg CLK, RST;
  wire [3:0]out;
  
  counter DUT (.CLK(CLK), .RST(RST), .out(out));
  
  initial 
    begin
      CLK=1;
      forever #5 CLK = ~CLK;  
    end
  
  initial
    begin
      RST = 1'b1;
      #10;
      RST = 1'b0;
      #100;
      RST = 1'b1;
      #10;
      RST = 1'b0;
      #50;
      #50;
      $finish;
    end
  
    initial
     begin
       $dumpfile("dump.vcd");
       $dumpvars(1);
     end
  
  initial
    $monitor("simtime = %g, CLK = %b, Reset = %b, out = %b", $time, CLK, RST, out);
  
endmodule
